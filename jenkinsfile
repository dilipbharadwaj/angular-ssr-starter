pipeline {
    agent any
    stages {
        stage('Checkout SCM'){
                git branch: 'SP2', credentialsId: 'Jenkin-Github', url: 'https://github.com/dilipbharadwaj/angular-ssr-starter.git'
        }

        stage('Install node modules'){
                RUN npm install
        }
        stage('Build'){
                RUN npm run build:ssr
        }
        stage('Deploy'){
                RUN pm2 restart all
        }
    }
}
